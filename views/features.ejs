    } */
    #click-photo {
      position: absolute;
      left: 33% !important;
      top: 0;
      height: 100vh;
      width: 68vw !important;
      background-color: transparent;
      border-color: transparent;
    }
    #video {
      background-color: rgb(44, 43, 43);
      border-radius: 5rem;
      max-height: fit-content;
      max-width: fit-content;
    }
    .just-div {
      background-color: white;
      position: absolute;
      top: 110rem;
    }
    section {
      padding: 5px;
      margin-top: 2%;
    }
  </style>
</head>
<body>
  <div class="wrapper">
    <div class="container-fluid" style="padding: 10px;padding-left: 20px;padding-bottom: 0px;">
      <div class="row">
        <div class="col-sm-4">
          <div class="feature-list">
            <div class="content card shadow">
              <img src="/images/undraw_pedestrian_crossing_l-6-jv.svg" width="100%" height="100px" alt="">
              <ul class="navbar-nav">
                <li class="nav-item"><a href="/imageRecognition" id="1" class="nav-link active">Image Recognition System</a>
                </li>
                <li class="nav-item"><a href="/speechToText" id="2" class="nav-link">Convert speech to text</a></li>
                <li class="nav-item"><a href="/sendMyLocation"  class="nav-link">Send My Location</a></li>
                <li class="nav-item" style="display: none"><a href="/features" id = 'featureLink' class="nav-link">features</a></li>
                <!-- <li class="nav-item"><a href="#" class="nav-link">4. Image To Text</a></li> -->
              </ul>
            </div>
          </div>
        </div>
        <div class="col-sm-8">
          <div class="content">
            <video id="video" width="320" height="240" autoplay></video>
            <button id="click-photo"></button>
            <div class="just-div">
              <canvas id="canvas" width="320" height="240"></canvas>
              <canvas id="myCanvas"></canvas>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.11.6/dist/umd/popper.min.js"
