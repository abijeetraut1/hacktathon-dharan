  <script>
    $(document).ready(function () {
      $(".navbar-nav>li>a").click(function () {
        $(".navbar-nav>li>a").removeClass('active');
        $(this).addClass('active');
      })
    });
  </script>
  <script src="./js/features.js"></script>
